{
  "uncap_menu_frame_rate": true,
  "ignore_initial_click": "constant",
  "idle": {
    "timeout": 180,
    "condition": "none"
  },
  "volume_transition_speed": {
    "down": 0.3
  },
  "states": {
    "hovered": {
      "graphics_state": "reduced",
      "show_toasts": false,
      "run_garbage_collector": true
    },
    "unfocused": {
      "frame_rate_target": 60,
      "graphics_state": "reduced"
    },
    "invisible": {
      "frame_rate_target": 60,
      "graphics_state": "reduced"
    },
    "unplugged": {
      "frame_rate_target": 60
    },
    "abandoned": {
      "frame_rate_target": 60
    }
  }
}
